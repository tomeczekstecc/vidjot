<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body mt-5">
      <img class="logo" src="/img/logo.png" alt="">
      <h3 class="text-center">Account Register</h3>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" name="name" id="" class="form-control" value="{{name}}" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" id="" class="form-control" value="{{email}}" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" id="" class="form-control" value="{{password}}" required>
        </div>
        <div class="form-group">
          <label for="password2">Confirm password</label>
          <input type="password" name="password2" id="" class="form-control" value="{{password2}}" required>
        </div>

        <button type="submit" class="btn btn-dark">Submit</button>
      </form>
    </div>
  </div>
</div>